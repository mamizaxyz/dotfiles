#!/bin/sh

vpn="$1"
nmcli connection export "$1" >/dev/null 2>&1 || { notify-send "ğŸ”µ VPN failed" "'$1' not found." && exit 1; }
# Removed wildcard from the condition because of unreliability
# ---------------------*---------- #
[ -f /sys/class/net/tun0/operstate ] && nmcli connection down "$vpn" >/dev/null 2>&1 && notify-send "ğŸ”´ VPN turned off" && exit 0
notify-send "Turning VPN on" && nmcli connection up "$vpn" >/dev/null 2>&1 && notify-send "ğŸŸ¢ VPN turned on"
